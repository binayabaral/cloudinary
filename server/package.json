{
  "name": "nodejs-express-crud-api",
  "version": "1.0.0",
  "description": "CRUD API using nodejs and express on local filesystem",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "build": "tsc",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.{ts,js}'",
    "postinstall": "tsc",
    "prettify": "prettier --single-quote --print-width 120 --write 'src/**/*.ts'",
    "format:code": "run-s lint:fix prettify",
    "migration:make": "knex --migrations-directory src/db/migrations migrate:make",
    "rollback": "knex migrate:rollback --knexfile src/db/knexfile.ts",
    "migrate": "knex migrate:latest --knexfile src/db/knexfile.ts",
    "migrate:prod": "knex migrate:latest --knexfile dist/db/knexfile.js"
  },
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "author": "Binaya Baral <binaya.baral5@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.2",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-lint": "^4.5.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-leapfrog": "^1.0.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cloudinary": "^1.30.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "http-status-codes": "^2.2.0",
    "knex": "^2.2.0",
    "knex-stringcase": "^1.4.6",
    "pg": "^8.7.3",
    "winston": "^3.8.1"
  }
}
